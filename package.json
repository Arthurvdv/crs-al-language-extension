{
    "name": "crs-al-language-extension",
    "displayName": "CRS AL Language Extension",
    "description": "Make working with the (Dynamics NAV / 365) AL Language easier and more efficient.",
    "version": "0.1.8",
    "publisher": "waldo",
    "engines": {
        "vscode": "^1.15.0"
    },
    "license": "UNLICENSED",
    "author": {
        "email": "info@cloud-ready-software.com",
        "name": "Cloud Ready Software GmbH",
        "url": "http://www.cloud-ready-software.com"
    },
    "icon": "images/icon.png",
    "categories": [
        "Other",
        "Extension Packs",
        "Snippets"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/CloudReadySoftware/crs-al-language-extension.git"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "snippets": [
            {
                "language": "al",
                "path": "./snippets/DesignPatterns.json"
            },
            {
                "language": "al",
                "path": "./snippets/Pages.json"
            },
            {
                "language": "al",
                "path": "./snippets/pageextension.json"
            },
            {
                "language": "al",
                "path": "./snippets/tableextension.json"
            },
            {
                "language": "al",
                "path": "./snippets/pagecustomization.json"
            },
            {
                "language": "xml",
                "path": "./snippets/BuildMetadata.json"
            }
        ],
        "commands": [
            {
                "command": "extension.InstallWaldosModules",
                "title": "CRS: Install Waldo's Modules"
            },
            {
                "command": "extension.RunObjectWeb",
                "title": "CRS: Run Object (Web Client)"
            },
            {
                "command": "extension.RunObjectTablet",
                "title": "CRS: Run Object (Tablet Client)"
            },
            {
                "command": "extension.RunObjectPhone",
                "title": "CRS: Run Object (Phone Client)"
            },
            {
                "command": "extension.RunObjectWindows",
                "title": "CRS: Run Object (Windows Client)"
            },
            {
                "command": "extension.RenameCurrentFile",
                "title": "CRS: Rename - Current File"
            },
            {
                "command": "extension.RenameAllFiles",
                "title": "CRS: Rename - All Files"
            },
            {
                "command": "extension.ReorganizeCurrentFile",
                "title": "CRS: Reorganize - Current File"
            },
            {
                "command": "extension.ReorganizeAllFiles",
                "title": "CRS: Reorganize - All Files"
            }
        ],        
        "configuration": {
            "title": "CRS AL Language Extension Configuration",
            "properties": {
                "CRS.nstfolder": {
                    "type": "string",
                    "default": "C:\\Program Files\\Microsoft Dynamics NAV\\*\\Service",
                    "description": "Folder of the NST"
                },
                "CRS.WebServerInstancePort": {
                    "type": "String",
                    "default": "",
                    "description": "Port number for the web client"
                },
                "CRS.WinServer": {
                    "type": "string",
                    "default": "localhost",
                    "description": "Server where the windows client is connecting to"
                },
                "CRS.WinServerInstance": {
                    "type": "String",
                    "default": "NAV",
                    "description": "Serverinstance where the windows client is connecting to"
                },
                "CRS.WinServerInstancePort": {
                    "type": "number",
                    "default": 7046,
                    "description ": "Portnumber of the serverinstance where the windows client is connecting to"
                },
                "CRS.FileNamePattern": {
                    "Type": "string",
                    "default": "<ObjectTypeShort><ObjectId>.<ObjectNameShort>.al",
                    "description": "The pattern of the filename for non-extension objects..  These vars can be used: <ObjectType>,<ObjectTypeShort>,<ObjectId>,<ObjectName>,<ObjectNameShort>"
                },
                "CRS.FileNamePatternExtensions": {
                    "Type": "string",
                    "default": "<ObjectTypeShort><BaseId>-Ext<ObjectId>.<ObjectNameShort>.al",
                    "description": "The pattern of the filename for extension objects.  These vars can be used: <ObjectType>,<ObjectTypeShort>,<ObjectId>,<ObjectName>,<ObjectNameShort>,<BaseName>,<BaseId> (If you want this to work, you need to put the Id in comment after the base name, like //21)"
                },
                "CRS.FileNamePatternPageCustomizations": {
                    "Type": "string",
                    "default": "<ObjectTypeShort><BaseId>-PageCust.<ObjectNameShort>.al",
                    "description": "The pattern of the filename for extension objects.  These vars can be used: <ObjectType>,<ObjectTypeShort>,<ObjectName>,<ObjectNameShort>,<BaseName>,<BaseId> (If you want this to work, you need to put the Id in comment after the base name, like //21)"
                },
                "CRS.AlSubFolderName": {
                    "enum": [
                        "Objects",
                        "Al",
                        "None"
                    ],
                    "type": "string",
                    "default": "Al",
                    "description": "Sets the subfoldername of where the objects will be placed.  If 'None', then 'Reorganize'-commands won't work."
                }                
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "tslint": "tslint src/*.ts",
        "build": "npm run build:powershell && npm run compile:typescript",
        "build:powershell": "mkdirp out/src && ncp src/powershell out/src/powershell",
        "compile:typescript": "tsc -watch -p ./"
    },
    "dependencies": {
        "@types/node": "^9.4.7",
        "format-duration": "^1.0.0",
        "mocha": "^5.0.4",
        "ncp": "^2.0.0",
        "opn": "^5.1.0",
        "path": "^0.12.7",
        "powershell": "^2.3.0",
        "time-stamp": "^1.0.1",
        "vscode": "^1.1.0"
    },
    "devDependencgies": {
        "powershell": "^2.2.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32",
        "opn": "^5.1.0",
        "ncp": "^1.0.0"
    }
}